<LabHeaderWidget>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: 100
        spacing: 460  # Space between the buttons
        padding: 10  # Padding around the layout
        canvas.before:
            Color: 
                rgba: (.3,.3,.3,1)
            Rectangle: 
                pos:self.pos
                size:self.size
        Button:
            text: "Home"
            size_hint_x: None
            width: 220
            on_press: root.ids.screen_manager.current = 'home'

        Button:
            text: "Settings"
            size_hint_x: None
            width: 220
            on_press: root.ids.screen_manager.current = 'settings'

        Button:
            text: "About"
            size_hint_x: None
            width: 220
            on_press: root.ids.screen_manager.current = 'about'

    ScreenManager:
        id: screen_manager
        HomeScreen:
            name: 'home'

        SettingsScreen:
            name: 'settings'

        AboutScreen:
            name: 'about'
    
    

