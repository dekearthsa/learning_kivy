                Color:
                    rgba: (.2,.4,.6,1)
                Rectangle:
                    pos: self.pos
                    size: self.size
    BoxLayout:
        orientation: 'horizontal'
        canvas.before:
            Color:
                rgba: .5,.3,.1,1
            Rectangle: 
                pos:self.pos
                size: self.size
            
        Label:
            text: '12345'
            size_hint: (.5,.2)
            canvas.before:
                Color:
                    rgba: .5, .3, .5, 1  # Set background color to red
                Rectangle:
                    pos: self.pos
