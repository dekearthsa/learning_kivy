<BoxLayOutWidget>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'  # Ensure the layout is vertical
        Label:
            text: 'Hello world'
            height: 40
            canvas.before:
                Color:
                    rgba: .5, .3, .5, 1  # Set background color to red
                Rectangle:
                    pos: self.pos
                    size: self.size
        Button:
            text: 'Button-A'
            font_size: "30"
            size_hint: (.2, 1) ##  size_hint: (width, height) widget of container 
            pos_hint: {"x": .0}
        Button:
            text: "Button-B"
            font_size: "30"
            size_hint: (.2, 1)
            pos_hint: {"center_x": .5}
        Button:
            text: "Button-C"
            font_size: "30"
            size_hint: (.2, 1)
            pos_hint: {"right": 1}

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        size_hint_y: None
        height: 120

        Button:
            text: 'Button-A'
            font_size: "30"

        Button:
            text: 'Button-B'
            font_size: "30"

        Button:
            text: 'Button-C'
